<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 主题样式. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FileAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#393A3F</item>
        <item name="colorPrimaryDark">#393A3F</item>
        <item name="colorAccent">#393A3F</item>

        <item name="windowActionBar">false</item>
        <!-- 隐藏标题栏 -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.NoStatusBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <!-- 隐藏标题栏 -->
        <item name="windowNoTitle">true</item>
        <!-- 隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>